# AI Meeting Assistant - Environment Variables
# Copy this file to .env and fill in your values

# Project Settings
PROJECT_NAME="AI Meeting Assistant"
DEBUG=true

# Database
# SQLite (Development)
DATABASE_URL="sqlite+aiosqlite:///./meeting_assistant.db"
# PostgreSQL (Production)
# DATABASE_URL="postgresql+asyncpg://user:password@localhost:5432/meeting_assistant"

# LLM Configuration
# Choose your provider: openai or anthropic
LLM_PROVIDER="anthropic"

# OpenAI (if using OpenAI)
OPENAI_API_KEY="sk-your-openai-api-key"

# Anthropic (if using Claude)
ANTHROPIC_API_KEY="sk-ant-your-anthropic-api-key"

# Default model
LLM_MODEL="claude-3-sonnet-20240229"

# Vector Database
CHROMA_PERSIST_DIRECTORY="./chroma_db"
EMBEDDING_MODEL="all-MiniLM-L6-v2"

# CORS Origins (comma-separated for multiple origins)
# CORS_ORIGINS=["http://localhost:3000", "http://localhost:5173"]

